<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"

    android:layout_height="wrap_content">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:id="@+id/header"
            android:textStyle="bold"
            android:background="@drawable/gradient_back"
            android:layout_width="match_parent"

            android:text="Become a Premium Learner"
            android:layout_height="wrap_content" />

        <TextView

            android:layout_below="@+id/header"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:id="@+id/text"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:text="This is premium Content.If you want to unlock this content please refer this app to your five friends Otherwise buy us a coffee."
            android:layout_height="wrap_content" />

        <Button
            android:layout_below="@+id/text"
            android:layout_width="200dp"
            android:id="@+id/rfr"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:text="Recommend to 5 friends"
            android:layout_centerHorizontal="true"
            android:background="@drawable/primary_color_btn"
            android:layout_height="35dp" />
        <TextView

            android:layout_below="@+id/rfr"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:id="@+id/or"
            android:layout_margin="5dp"

            android:textSize="16sp"
            android:layout_width="match_parent"
            android:text="OR"
            android:layout_height="wrap_content" />


        <Button
            android:layout_below="@+id/or"
            android:layout_margin="5dp"
            android:layout_width="200dp"
            android:id="@+id/coffee"
            android:textColor="@color/white"
            android:text="Buy us a coffee"
            android:layout_centerHorizontal="true"
            android:background="@drawable/primary_color_btn"
            android:layout_height="35dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>