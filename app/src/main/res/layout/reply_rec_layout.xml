<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/rply_rec_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/placeholder" />

            <TextView
                android:id="@+id/rply_rec_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/rply_rec_img"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/rply_rec_img"
                android:layout_toRightOf="@+id/rply_rec_img"
                android:text="Jhankar Mahbub"
                android:textColor="#000"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/rply_rec_time"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignLeft="@+id/rply_rec_name"
                android:layout_alignStart="@+id/rply_rec_name"
                android:layout_below="@+id/rply_rec_name"
                android:text="4.00 PM - "
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_below="@+id/rply_rec_name"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/rply_rec_time"
                android:layout_toRightOf="@+id/rply_rec_time"
                android:src="@drawable/clock" />

            <ImageView
                android:id="@+id/rply_rec_popup"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/cmnt_rec_name"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:src="@drawable/down"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView

            android:id="@+id/rply_rec_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"


            android:text="@string/dummytext"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/line"
            android:visibility="gone" />


    </LinearLayout>


</RelativeLayout>
