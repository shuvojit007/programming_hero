<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#5ffcf9f4"
    android:layout_height="match_parent">

<ImageView
    android:layout_marginTop="10dp"
    android:src="@drawable/cancel"
    android:id="@+id/cancel"
    android:layout_marginLeft="10dp"
    android:layout_width="25dp"
    android:layout_height="25dp" />
    <ImageView

        android:id="@+id/img"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:src="@drawable/auth2"
        android:layout_height="200dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/img"
        android:id="@+id/text"
        android:textAlignment="center"
        android:text="Sign in to get connect with community and share your knowledge with others."
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:id="@+id/text2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/text"
        android:textAlignment="center"
        android:text="Connect with"
        android:layout_height="wrap_content" />
<LinearLayout
    android:gravity="center"
    android:layout_width="200dp"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/text2"
    android:layout_height="wrap_content">

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:paddingLeft="25dp"
        android:background="#589852"
        android:paddingRight="25dp"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_height="40dp"
        android:text="@string/email_or_phone" />
    <com.google.android.gms.common.SignInButton
        android:id="@+id/googlesignin"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></com.google.android.gms.common.SignInButton>
    <TextView
        android:layout_width="wrap_content"
        android:text="Register"
        android:id="@+id/signup"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content" />
</LinearLayout>
</RelativeLayout>